}

.img-login {
  height: 100rpx;
  width: 100rpx;
  margin-top: 100rpx;
  margin-left: 30rpx;
  border: 5rpx solid white;
  border-radius: 50%;
}

.text-layout {
  flex-direction: column;
}

.text-loginA {
  margin-top: 110rpx;
  margin-left: 40rpx;
  color: white;
  display: flex;
}

.text-loginB {
  margin-top: 20rpx;
  margin-left: 40rpx;
  font-size: 20rpx;
  color: white;
  display: flex;
}

.middle {
  background-color: white;
  margin-top: 100rpx;
  margin-left: 10rpx;
  float: left;
  height: 150rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
}

.button-detail {
  display: flex;
  flex-direction: row-reverse;
  width: 600rpx;
}

.button-middle {
  font-size: 20rpx;
  width: 1%;
}

.middle-view {
  width: 80%;
  height: 200rpx;
  background-color: white;
  position: absolute;
  top: 285rpx;
  left: 10%;
  border-radius: 10rpx;
  box-shadow: 1rpx 5rpx 5rpx #c9c4c4;
  display: flex;
  flex-direction: row;
}

.layout-lr {
  width: 100%;
  height: 100%;
