.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  box-shadow: 1rpx 5rpx 5rpx #f5f1f1;
  font-size: 13px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-content {
  margin-top: 80rpx;
}

.tab-item {
  width: calc(14%);
  display: inline-block;
  text-align: center;
}

.tab-item.active {
  color: #0fb;
  position: relative;
  text-align: center;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 5rpx;
  width: 45rpx;
  background: #0fb;
  position: absolute;
  text-align: center;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 16rpx;
}

.cartoon-layou {
  display: flex;
  flex-direction: row;
}

.cartoon-detail {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}

.scoll-h {
  height: 100%;
}

.image-cartoon {
  width: 100%;
  height: 430rpx;
}

.text-layout {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:10rpx 20rpx 3rpx 20rpx;
}

.text-title {
  font-weight: 500rpx;
  font-size: 26rpx;
}

.text-category {
  flex: 1;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.text-category text {
  background-color: red;
  color: white;
  font-size: 17rpx;
  margin-left: 15rpx;
  border-radius: 20rpx;
  padding: 3.5rpx 10rpx;
}

.text-author {
  font-size: 22rpx;
  margin-left: auto;
  color: rgb(148, 153, 153);
}

.text-description {
  font-size: 22rpx;
  color: rgb(148, 153, 153);
  margin-right: 10rpx;
}
