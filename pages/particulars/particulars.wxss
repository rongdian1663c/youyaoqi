.collect {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  width: 100%;
  border: 5rpx solid blue;
  margin-top: 35rpx;
}

.collect image {
  height: 60rpx;
  width: 60rpx;
  margin-left: 5%;
}

.collect-text {
  font-size: 35rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  margin-right: auto;
}

.read {
  height: 80%;
  color: white;
  font-size: 30rpx;
  background-color: #20db84c5;
  border-top-left-radius:50rpx;
  border-bottom-left-radius:50rpx;
  padding: 12rpx 110rpx 0 120rpx;
  margin: auto 0 ;
}

.description {
  margin-top: 35rpx;
  font-size: 30rpx;
  color: gray;
  border: 5rpx solid yellow;
}

.catalog {
  border: 5rpx solid green;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.catalog-specific {
  display: flex;
  flex-direction: row;
}

.catalog-specific image {
  margin: 10rpx 20rpx 10rpx 30rpx;
  height: 150rpx;
  width:  33%;
  border-radius: 10rpx;
}

.dirname {
  border: 5rpx solid pink;
  width: 60%;
  display: flex;
  flex-direction: column;
  margin : 40rpx 0rpx 0rpx 30rpx;
}

.dirname-text {
  font-size: 32rpx;
  font-weight:700;
}

.next-chapter {
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.next-chapter text {
  font-size: 28rpx;
  color: gray;
  margin-right: 13rpx;
}