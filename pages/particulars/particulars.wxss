.top-image {
  width: 100%;
  filter: contrast(40%);
}

.opacity {
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  border: 5rpx solid red;
  height: 100%;
}

.middle-layout {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 150rpx;
  width: 100%;
}

.lucency {
  width: 100%;
  display: flex;
  border: 5rpx solid black;
}

.text-layout {
  flex-direction: column;
  margin-left: 3%;
  display: flex;
  width: 100%;
  
}

.Cartoon-name {
  font-size: 47rpx;
  color: white;
}

.author-name {
  font-size: 32rpx;
  color: white;
  margin-top: 150rpx;
}

.hot {
  font-size: 32rpx;
  color: white;
  margin-top: 12rpx;
}

.image-cover {
  height: 430rpx;
  width: 600rpx;
  border-radius: 10rpx;
  margin-left: 5%;
  border: 5rpx solid white;
}

.comic-classify {
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
  width: 100%;
  
}

.comic-classify-specific {
  margin-right: 20rpx;
  color: rgb(35, 177, 243);
  background-color: rgba(35, 177, 243, 0.144);
  font-size: 32rpx;
  border-radius: 30rpx;
  padding: 3.5rpx 15rpx;
}

