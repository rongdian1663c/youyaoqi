page {
    position: relative;
    padding-top: 40px;
}

.tabbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 40px;
    box-shadow: 0 2px 10px #ccc;
    box-sizing: border-box;
    padding: 100 80rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #00ffbb;
    border-top: 1rpx solid #00ffbb;
    z-index: 999;
}

.tabbar-item {
    position: relative;
    color: #999999;
    height: 40px;
    white-space: nowrap;
    line-height: 40px;
    font-size: 36rpx;
    box-sizing: border-box;
}

.active {
    color: white;
    font-weight: bold;
}

.active::before {
    position: absolute;
    bottom: 0;
    left: 5px;
    content: "";
    display: block;
    width: 26px;
    height: 3px;
    background-color: #ffd401;
}